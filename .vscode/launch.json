{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to NinjaTrader (Auto-find)",
            "type": "clr",
            "request": "attach",
            "processName": "NinjaTrader.exe",
            "justMyCode": false,
            "requireExactSource": false
        },
        {
            "name": "Attach to NinjaTrader (Pick Process)",
            "type": "clr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": false,
            "requireExactSource": false
        },
        {
            "name": "Attach by PID (8184 - Current)",
            "type": "clr",
            "request": "attach",
            "processId": "8184",
            "justMyCode": false,
            "requireExactSource": false
        },
        {
            "name": "Attach with vsdbg-ui (Legacy)",
            "type": "clr",
            "request": "attach",
            "processId": "8184",
            "justMyCode": false,
            "requireExactSource": false,
            "symbolOptions": {
                "searchPaths": [
                    "c:\\Mac\\Home\\Documents\\NinjaTrader 8\\bin\\Custom",
                    "c:\\Mac\\Home\\Documents\\NinjaTrader 8\\bin\\Custom\\bin\\Debug"
                ],
                "searchMicrosoftSymbolServer": false,
                "searchNuGetOrgSymbolServer": false
            }
        }
    ]
}

